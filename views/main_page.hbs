{{> header_partial}}

<div class="container-fluid">

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4 text-center">
        <i class="fa fa-glass fa-lg"></i>
        Coordinate tonight!
        <i class="fa fa-taxi fa-lg"></i>
      </h1>
    </div>
  </div>

  <form action="/" method="post">
    <div class="form-group">
      <label for="location">Your location tonight?</label>
      <input id="location" name="location" class="form-control" placeholder="" type="text">
    </div>
    <button type="submit" class="btn btn-light">Submit</button>
  </form>
  
  <div class="list-group">
    {{#session.businesses}}
    {{^is_closed}}
    <div class="row">
      {{! id  - this is the unique yelp id }}
      <div class="col-4">
        <img class="img-fluid img-thumbnail" src="{{image_url}}">
      </div>
      
      <div class="col-8">
        <h4>
          <a href="{{url}}">{{name}}</a>
        </h4>
        <address>
          {{location.address1}}<br>
          {{location.city}}, {{location.state}} {{location.zip}}<br>
          {{display_phone}}
        </address>
        
        <form action="/" method="post">
          <input type="hidden" name="yelpId" value={{id}}>
          {{num_going}} Going
          {{#im_going}}
            <button type="submit" class="btn btn-success">I'm going</button>
          {{/im_going}}
          {{^im_going}}
            <button type="submit" class="btn btn-outline-dark">I'm going</button>
          {{/im_going}}
        </form>
        
        
      </div>

    </div>
    {{/is_closed}}
    {{/session.businesses}}
  </div>

  
  <footer>
    Locations via <a href="https://www.yelp.com">Yelp</a>
    | 
    <a href="https://learn.freecodecamp.org/coding-interview-prep/take-home-projects/build-a-nightlife-coordination-app/">
      Challenge: FCC Build a Nightlife App</a>
  </footer>
  
  
</div>                                                                         


{{> footer_partial}}